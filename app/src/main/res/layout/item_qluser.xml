<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/xam"
    app:mode="same_level"
    app:dragEdge="right">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtBan"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Cấm"
            android:background="@color/red"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txtCapQuyen"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Cấp quyền"
            android:background="@color/xanh"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txtXoaQuyen"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Gỡ quyền"
            android:background="@color/orange"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
        android:id="@+id/txtUnBan"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:text="Gỡ cấm"
        android:background="@color/xanh"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>
    </LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avataruser"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tên"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@+id/avataruser"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtemail"
        android:text="Gmail.com"
        android:layout_marginLeft="10dp"

        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/txtUserName"
        app:layout_constraintLeft_toRightOf="@id/avataruser"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>