<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/topView"
        android:layout_width="422dp"
        android:layout_height="201dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view5"
        android:layout_width="496dp"
        android:layout_height="54dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="144dp"
        android:layout_height="106dp"

        android:src="@drawable/logo"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:selectAllOnFocus="false"
        android:text="Cửa hàng đồ gỗ mĩ nghệ Thúy Khanh"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Khu 1 thị trấn Ngô Đồng huyện Giao Thủy tỉnh Nam Định"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />
    <LinearLayout
        android:id="@+id/btnqlBanan"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:background="@drawable/bo_goc"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnqlBanGhe"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <ImageView
            android:id="@+id/imgDinnerTable"
            android:layout_width="82dp"
            android:layout_height="96dp"
            android:src="@drawable/banan" />

        <TextView
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Quản lí bàn ăn"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnqlBanGhe"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:background="@drawable/bo_goc"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/btnqlBanan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <ImageView
            android:id="@+id/img"
            android:layout_width="102dp"
            android:layout_height="85dp"
            android:src="@drawable/banghe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Quản lí bàn ghế"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnqlTuKe"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bo_goc"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnQuanliUser"
        app:layout_constraintTop_toBottomOf="@+id/btnqlBanan">

        <ImageView
            android:id="@+id/imgtuke"
            android:layout_width="94dp"
            android:layout_height="80dp"
            android:src="@drawable/tuke" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Quản lí tủ kệ"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnQuanliUser"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bo_goc"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/btnqlTuKe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnqlBanGhe">

        <ImageView
            android:id="@+id/imggido"
            android:layout_width="83dp"
            android:layout_height="75dp"
            android:src="@drawable/accounts" />

        <TextView
            android:layout_width="107dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Quản lí tài khoản"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnQuanLiDonHang"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bo_goc"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuanliUser">

        <ImageView
            android:id="@+id/imgdonhang"
            android:layout_width="83dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_donhang" />

        <TextView
            android:layout_width="107dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Quản lí đơn hàng"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>