<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right"
    android:id="@+id/swipe">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_donhang"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvTongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ1900"
            android:textSize="18dp"
            android:layout_marginTop="13dp"

            android:textColor="#FF5722"
            app:layout_constraintTop_toBottomOf="@+id/rcv_donhang"
            app:layout_constraintRight_toLeftOf="@id/btnxuli"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tongtien"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Tổng tiền: "
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/rcv_donhang"
            app:layout_constraintRight_toLeftOf="@id/tvTongtien"/>
        <Button
            android:id="@+id/btnxuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bo_goc"
            android:text="Xử lí xong"
            android:layout_marginRight="8dp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/rcv_donhang"
            app:layout_constraintRight_toRightOf="parent"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/xam"
            app:layout_constraintTop_toBottomOf="@id/btnxuli"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


